
config system
	option ttylogin '0'
	option log_size '64'
	option urandom_seed '0'
	option compat_version '1.0'
	option timezone 'CST-8'
	option zonename 'Asia/Shanghai'
	option description 'MMDVM 4G热点'
	option notes '工业4G路由 MMDVM热点'
	option log_proto 'udp'
	option conloglevel '8'
	option cronloglevel '5'
	option hostname 'MT7620A-4G'

config timeserver 'ntp'
	list server 'ntp.tencent.com'
	list server 'ntp1.aliyun.com'
	list server 'ntp.ntsc.ac.cn'
	list server 'cn.ntp.org.cn'

config led 'led_4g'
	option trigger 'netdev'
	option name 'wifi'
	option dev 'wlan0'
	list mode 'link'
	list mode 'tx'
	list mode 'rx'
	option sysfs 'orange:wlan'

config led 'led_lan'
	option name 'lan'
	option sysfs 'green:lan'
	option port_mask '0x01'
	option trigger 'netdev'
	option dev '3g-4g'
	list mode 'link'
	list mode 'tx'
	list mode 'rx'

config led 'led_wan'
	option name 'wan'
	option sysfs 'green:wan'
	option port_mask '0x10'
	option trigger 'heartbeat'

config led
	option name '4G'
	option sysfs 'green:system'
	option trigger 'netdev'
	option dev '3g-4g'
	list mode 'link'
	list mode 'tx'
	list mode 'rx'

